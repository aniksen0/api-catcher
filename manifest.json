{
  "manifest_version": 3,
  "name": "API Catcher",
  "description": "Capture and organize API calls made by websites",
  "version": "1.0",
  "permissions": ["webRequest", "storage", "tabs","scripting","activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": { "128": "icons/icon128.png" }
  }
}
